<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://kit.fontawesome.com/ad694a6f7f.css" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
        integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/home.css">
    <title>Document</title>
</head>

<body>

    <nav>
        <div class="logo">

        </div>
        <h1>
            Depo Solutions Private Limited
        </h1>
    </nav>

    <section class="user-data container">
        <div class="data">


            <form action="/datainset" method="post">
                <div class="types-div">
                    <div class="data-form">
                        <h1>Billing </h1>
                        <input type="text" name="billName" id="" placeholder="Company Name" value="">
                        <textarea name="billAddress" id="" cols="30" rows="10" placeholder="Adddress"></textarea>
                        <input type="text" name="billCity" id="" placeholder="City">
                        <input type="number" name="billPin" id="" placeholder="PIN CODE">
                        <input type="email" name="billMail" id="" placeholder="Company email">
                        <input type="number" name="billPhone" id="" placeholder="Company Phone number">
                        <input type="text" name="billGST" id="" placeholder="GST number">
                    </div>
                    <div class="vl">

                    </div>
                    <div class="data-form">
                        <h1>Shipping</h1>
                        <input type="text" name="shipName" id="" placeholder="Company Name">
                        <textarea name="shipAddress" id="" cols="30" rows="10" placeholder="Adddress"></textarea>
                        <input type="text" name="shipCity" id="" placeholder="City">
                        <input type="number" name="shipPin" id="" placeholder="PIN CODE">
                        <input type="email" name="shipMail" id="" placeholder="Company email">
                        <input type="number" name="shipPhone" id="" placeholder="Company Phone number">
                        <input type="text" name="shipGST" id="" placeholder="GST number">

                    </div>

                    <div>

                    </div>
                </div>

                <div class="products">

                    <div class="selection">
                        <div class="product-list">
                            <label for="product_list">Choose Product:</label>

                            <div class="select-div">
                                <select name="product_list" class="select-product">

                                    <% for (let i of invoice_data) {%>



                                        <option class="op" id="<%= i._id%>" name="<%= i._id%>"
                                            value="<%= i.productName%>">
                                            <%= i.productName%>
                                                <!-- <a onclick="addProduct()">Add</a> -->
                                        </option>

                                        <!-- <a onclick="addProduct()">Add</a> -->
                                        <%}%>



                                </select>
                                <a onclick="addProduct()">Add</a>
                                <!-- <button id="add" onclick="">Add</button> -->
                            </div>

                        </div>
                        <div class="other-data">
                            <!-- <p id="setdata"> </p> -->
                            <input type="number" placeholder="Enter Qty" name="Qty" id="">
                            <input type="number" placeholder="Discount in percent" name="disc">
                        </div>
                    </div>
                    <p id="setdata"> </p>
                </div>
                <div class="btn">
                    <input type="submit" value="Add">
                </div>
            </form>


        </div>

        <div class="items">
            <div class="head-name">
                <p>Name</p>
                <p>Qty</p>
                <p>Discount</p>
                <p>GST</p>
                <p>Total</p>
            </div>




            <div class="check-itemss">
                <ul>

                    <li class="bill-itemss">
                        <p class="p-name">

                            Product
                        </p>
                        <p>
                            Qty
                        </p>
                        <p>
                            Discount
                        </p>
                        <p>
                            GST
                        </p>

                        <p>
                            del
                        </p>
                    </li>
                    <% for (let i of product_data ) { %>

                        

                        <li class="bill-itemss">
                            <p class="p-name">

                                <%= i.productName %>
                            </p>
                            <p>
                                <%= i.productQty %>
                            </p>
                            <p>
                                <%= i.productDiscount %>
                            </p>
                            <p>
                                <%= i.productGST %>
                            </p>




                            <a href="/delete-item/?productDel=<%= i.productName%>">
                                del
                            </a>
                        </li>

                    <%}%>

                </ul>
            </div>
        </div>

        <div class="genrate">
            <a href="/genrate">Gen <i class="fa-thin fa-trash"></i> </a>
        </div>
    </section>

    <script src="./js/test.js"></script>
</body>

</html>